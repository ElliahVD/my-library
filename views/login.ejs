    <script>
      function encodeFormData(data) {
        return Object.entries(data)
          .map(
            ([key, value]) =>
              encodeURIComponent(key) + "=" + encodeURIComponent(value)
          )
          .join("&");
      }

      async function connectUser(event) {
        
        try {
          console.log("LOGIN PAGE -- connectUser -- event: ", event);
          event.preventDefault();
          const form = document.getElementById("login-form");
          const formData = new FormData(form);

          const data = {};

          for (const [key, value] of formData.entries()) {
            data[key] = value;
            
          }

          console.log("LOGIN PAGE -- connectUser -- data:", data);
          console.log("LOGIN PAGE -- connectUser -- data.pseudo:", data.pseudo);
          const encodedData = encodeFormData(data);
          console.log("LOGIN PAGE -- connectUser -- encodedData:", encodedData);
// le user se connecte, on voit true dans les logs consoles, mais pas de redirection page users depuis le userController
          const response = await axios({
            method: "POST",
            url: "/connect?" + encodedData,
          });
          // console.log("LOGIN PAGE -- connectUser -- response: ", response);

          // if (response.ok) {
          //   const responseBody = await response.json();
          //   alert(responseBody.message);
          // } else {
          //   alert("Error: " + response.statusText);
          // }
        } catch (error) {
          console.log("LOGIN PAGE -- connectUser -- error: ", error);
        }
      }
